{
	"name": "nodejs-backend-scripts",
	"version": "1.0.0",
	"main": "dist/index.js",
	"author": "Michael Trejos Pulgarin <michael.trejosp@hotmail.es>",
	"description": "NodeJS backend example-template with custom development scripts",
	"license": "MIT",
	"keywords": [
		"node",
		"nodejs",
		"typescript",
		"ava",
		"nyc",
		"istanbul",
		"rollup",
		"eslint",
		"prettier",
		"dotenv",
		"testdouble",
		"td",
		"ts-node",
		"boilerplate"
	],
	"scripts": {
		"dev": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts",
		"dev:compile": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts --compile",
		"dev:build": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts --build",
		"format": "prettier --write ./src && eslint --fix ./src",
		"format:scripts": "prettier --write ./scripts && eslint --fix ./scripts",
		"lint": "eslint ./src",
		"start:dev": "ts-node ./src/index.ts",
		"start": "node .",
		"clean": "rimraf ./dist",
		"build": "rollup -c",
		"build:mini": "ROLLUP_TERSER=true rollup -c"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^19.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.2",
		"@rollup/plugin-replace": "^3.0.0",
		"@rollup/plugin-typescript": "^8.2.3",
		"@types/node": "^16.4.1",
		"@types/rimraf": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"ava": "^3.15.0",
		"chokidar": "^3.5.2",
		"dotenv": "^10.0.0",
		"editorconfig": "^0.15.3",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-config-standard-with-typescript": "^20.0.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-standard": "^5.0.0",
		"nyc": "^15.1.0",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"rollup": "^2.53.3",
		"rollup-plugin-clear": "^2.0.7",
		"rollup-plugin-progress": "^1.1.2",
		"rollup-plugin-sizes": "^1.0.4",
		"rollup-plugin-terser": "^7.0.2",
		"testdouble": "^3.16.1",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	}
}
